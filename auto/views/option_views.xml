<?xml version="1.0"?>
<odoo>
    <record id="opt_action" model="ir.actions.act_window">
        <field name="name">Options</field>
        <field name="res_model">option</field>
        <field name="view_mode">tree,form</field>
    </record>  
    <record id="view_opt_form" model="ir.ui.view">
        <field name="name">option.form</field>
        <field name="model">option</field>
        <field name="arch" type="xml">
            <form string="Form">
                <group>
                    <field name="name"/> 
                </group>
            </form>
        </field>
    </record>
    <record id="view_opt_tree" model="ir.ui.view">
        <field name="name">option.tree</field>
        <field name="model">option</field>
        <field name="arch" type="xml">
            <tree string="List">
                    <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>